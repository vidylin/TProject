<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include layout="@layout/chat_time_right" android:id="@+id/chat_head_time_right"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_head_time_right">
        <RelativeLayout
            android:layout_width="530px"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat_people_img"
            >
            <RelativeLayout
                android:id="@+id/ll_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_translate_display_right"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/chat_private_content_txt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="架点好久好案发斯蒂芬顺丰"
                    android:textSize="30px" />
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/chat_people_img"
            android:layout_width="78px"
            android:layout_height="78px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="15px"
            android:layout_alignParentRight="true"
            android:background="@mipmap/default_head_portrait"/>
    </RelativeLayout>


</RelativeLayout>