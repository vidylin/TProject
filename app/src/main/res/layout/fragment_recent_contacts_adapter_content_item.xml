<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/people_img_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="20px">
            <ImageView
                android:id="@+id/from_people_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/msg_default_head_img"/>
            <ImageView
                android:id="@+id/to_people_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31px"
                android:layout_marginTop="41px"
                android:src="@mipmap/msg_default_head_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:orientation="vertical"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/people_img_rl">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/from_people_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="adaã€"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/to_people_name_tv"
                    android:layout_toRightOf="@id/from_people_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="ada"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/msg_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:textSize="20px"
                    android:textColor="@color/black_body_simple"
                    android:text="19:33"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px">
                <TextView
                    android:id="@+id/new_msg_tv"
                    android:layout_toLeftOf="@+id/red_point_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="ajdsfjajdsfjajfjas;ljldja;jsd;ljaljf;jalsdjljalsjdadsf"
                    android:textColor="@color/black_body_simple"
                    android:textSize="28px"/>
                <TextView
                    android:id="@+id/red_point_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="1"
                    android:background="@mipmap/red_point"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="20px"
                android:layout_marginTop="34px"
                android:layout_height="1px"
                android:background="@color/parting_line"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>