<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:padding="@dimen/margin_4"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/px36dp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="20px"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_marginTop="26px"
        android:textColor="@color/black"
        android:textSize="@dimen/px28dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_01"
        android:layout_marginTop="38px"
        android:background="@color/dialog_line"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_bl_corners_selector"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/line_height_01"
            android:layout_height="match_parent"
            android:background="@color/dialog_line"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_br_corners_selector"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/confirm_green"
            android:textSize="@dimen/text_size_16"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>